{
  "description": "Tries to play links in MPV",
  "manifest_version": 3,
  "name": "post2mpv",
  "version": "1.0.0",
  "description": "Play videos in mpv, download with yt-dlp, or translate with vot",
  "icons": {
    "16": "icons/icon_16x16.png",
    "32": "icons/icon_32x32.png",
    "48": "icons/icon_48x48.png",
    "64": "icons/icon_64x64.png",
    "256": "icons/icon_256x256.png"
  },
  "action": {
    "default_icon": "icons/icon_48x48.png",
    "default_title": "Play the current URL in MPV",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "post2mpv@netnom.uk",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "background": {
    "scripts": ["post2mpv.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "permissions": [
    "nativeMessaging",
    "menus",
    "activeTab",
    "storage",
    "scripting"
  ]
}
